<div class="container">



  <div class="row justify-content-center">
    <div class="col-10">

      <%= render 'shared/errors' %>
      
      <%= form_with(model: @article, class: "shadow bg-info rounded p-3 mb-3", local: true) do |f| %>

        <div class="form-group row mb-4">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of articel" %>
          </div>
        </div>

        <div class="form-group row mb-5">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <button class="bg-transparent border-0">
            <%= f.submit class: "btn btn-outline-light btn-lg" %> 
          </button>
        </div>

      <% end %>

    </div>


    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info text-center mt-3" %>
  </div>

</div>


