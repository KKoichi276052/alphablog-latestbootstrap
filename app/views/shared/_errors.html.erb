<% if obj.errors.any? %>
  <div class="alert alert-danger alret-dismissable fade show" role="alert">
  
    <div class="d-flex justify-content-between">
      <h4>The following errors prevented the <%= obj.class.name.downcase %> from being saved</h4>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
        

    <ul>
      <% obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>

  </div>
<% end %>
